.root{
  width:100%;
  background-color #fff;
  .question{
    color:#666;
    line-height 40px;
    height:40px;
    border-bottom 1px solid #ccc;
    padding:0 20px;
    width:90%;
    margin:0 auto;
    word-wrap: break-word;
    word-break: break-all;
    font-size :12px;
    .questionLeft{
      float:left;
    }
    .questionRight{
      display:none;
    }
  }
  .rightImg{
    width:16px;
    float:right;
    margin-top:15px;
  }
  .answer{
    display:none;
  }
  .answerTxt{
    color:#666;
    border-bottom 1px solid #ccc;
    padding:10px 20px;
    line-height:20px;
    width:90%;
    margin:0 auto;
    word-wrap: break-word;
    word-break: break-all;
    font-size :12px;
  }
  .true{
    display:block;
  }
  .false{
    display:none;
  }
}