.Content{
  position: absolute;
  height:100%;
  padding-top: 50px;
  padding-bottom: 50px;
  overflow:auto;
  width: 100%;
    left: 0px;
    top: 0px;
}
.header {
  background: $main
  display: flex;
  flex-direction: column;
  align-items: center;
  pb 36

  .safeplan {
    font-size: 12px
    color: #abeeff
    mt: 42
    display: flex
    align-items: center

    &::after {
      content: ''
      triangle 6px 12px right #abeeff
      ml 6
    }

    & > img {
      mr 8
    }
  }

  .rate {
    po r
    mt 20
    w 286
    h 144
    overflow: hidden;
    bgimg url(../../../../assets/images/huoproduct.png) contain
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    color: #fff

    .chart {
      po a
    }

    p {
      &:nth-child(1) {
        font-size: 12px
      }
      &:nth-child(2) {
        font-size: 60px
        line-height: 0.7
        mt 20

        span {
          font-size: 15px
        }
      }
    }
  }

  .detail {
    color: #fff
    display: flex;
    align-items: center;
    font-size: 15px
    mt 42
    img {
      ml 5
    }
  }
}

.content {
  bg #fff
  display: flex;
  flex-direction: column;
  align-items: center;
