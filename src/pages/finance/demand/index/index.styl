  .newUser {
    mt 30
    display: flex;
    flex-direction: column;
    align-items: center;
    p {
      &:nth-child(1) {
        display: flex;
        align-items: center;
        font-size: 14px
        color #626262
        span {
          color #ff7700
        }
        &::before {
          content: ''
          h 1
          w 15
          bg #626262
          mr 5
        }
        &::after {
          content: ''
          h 1
          w 15
          bg #626262
          ml 5
        }
      }
      &:nth-child(2) {
        mt 12
        font-size: 17px
        color #ff7700
        display: flex;
        align-items: center;
        &::after {
          content: ''
          ml 5
          w 8
          h 14
          bgimg url(../../../../assets/images/harrow.png) contain
        }
      }
    }
  }

  .buyButton {
    mt 46
    w 243
    h 50
    border: 0
    border-radius: 23px
    background: #ff7522
    color: #fff
    font-size: 20px
  }
  .desc {
    color: #aaa
    font-size: 15px
    mt 40
  }
}
