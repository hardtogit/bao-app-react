.financeBar {
  background-color: #fff;
  display: flex;
  align-items: center;
  height: 70px;
  padding-left: 15px;
}

.icon {
  width: 35px;
  height: 35px;
  margin-right: 16px;
}

.content {
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
  height: 70px;
}

.contentEmptyBorder {
  border-bottom: 0;
}

.contentLeft {
  flex: 1;
}

.title {
  font-size: 15px;
  display: block;
}

.subTitle {
  color: #a3a3a3;
}

.desc {
  font-size: 12px;
  margin-top: 8px;
  color: #a3a3a3;
  display: block;
}

.contentCenter {
  color: #ff7700;
  font-size: 14px;
  margin-right: 6px;
}

.contentRight {
  width: 12px;
  height: 20px;
  margin-right: 15px;
}
