.root {
  h 100%
  bg $bg
  pt 44
}
.bg{
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%
  overflow auto
}
  .header{
    background-color #fff;
    padding 15px 15px 0 15px
    .textOne{
      color #666
    }
    .textTwo{
      color:#999;
      font-size 14px;
      margin 10px auto
    }
    .input{
      height 44px
      border:none;
      font-size 24px;
      width 100%
      color #ff7701
      &::-webkit-input-placeholder{
        color: #999
      }
      &:focus{
        outline none
      }
    }
  }
.zg{
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%
  background-color red
  transition: all .5s;
  -moz-transition: all .5s;	/* Firefox 4 */
  -webkit-transition: all .5s;	/* Safari å’Œ Chrome */
  -o-transition: all .5s;	/* Opera */
  z-index 9999
}
.title {
  font-size: 14px
  color #888
  h 30
  display flex
  align-items center
  pl 15
  margin-top 44px
}

.status {
  bg rgb(252,252,252)
  h 100
  padding 0 15px
  display flex
  & > div {
    flex 1
    display flex
    flex-direction column
    justify-content center
    p {
      &:nth-child(1) {
        fs 14
        color #888
        span {
          fs 10
        }
      }
      &:nth-child(2) {
        mt 20
        fs 18
      }
    }
  }
}

.expectIncome {
  bg #fff
  padding 0 0 0 15px
  h 44
  .wrap {
    border-top 1px solid #ddd
    display flex
  }
  .name {
    color #888
    line-height 44px
  }
  .profit {
    color #ff7701
    line-height 44px
    flex 1
    text-align right
    padding-right 15px
  }
}

.form {
  bg #fff
  display flex
  flex-direction column
  justify-content center
  & > p {
    fs 14
    span {
      fs 10
    }
  }
}

.inputWrapper {
  mt 12
  display flex
  h 38
  & > button {
    w 38
    border 1px solid #e5e5e5
    color rgb(162,162,162)
    fs 35
    font-weight 100
    bg #fff
  }
  & > div {
    flex 1
    display flex
    margin 0 3px
    & > input {
      flex 1
      border 1px solid $main
      text-align center
      vertical-align middle
      font-size 18px
      color #000
    }
  }
}
.textContent{
  padding-left 15px
  padding-top 10px
  padding-right 6px
  color #888
  font-size 14px
}
.coupon {
  bg #fcfcfc
  h 44
  display flex
  align-items center
  justify-content space-between
  & > span {
    font-size 16px
  }
  & > div {
    display flex
    align-items center
    div {
      po r
      h 25
      bg rgb(117,205,161)
      padding 0 12px
      display flex
      align-items center
      justify-content space-between
      color #fff
      &::before,
      &::after {
        content ''
        h 30
        w 35
        po a
        bg #fcfcfc
        border-radius: 100%
      }
      &::before {
        top -3px
        left -30px
      }
      &::after {
        top -3px
        right -30px
      }
    }
    &::after {
      content: ''
      w 9
      h 16
      bgimg url(../../../../assets/images/arrow2.png) contain
      ml 7
      z-index: 2
    }
  }
}

.amount {
  h 70
  padding 0 15px
  bg #fff
  display flex
  align-items center
  justify-content space-between
  border-bottom $border
  border-top $border
  margin-bottom 20px
  span {
    &:nth-child(1) {
      color #888
    }
    &:nth-child(2) {
      font-size: 25px
      color #ff7701
    }
  }
}

.pay {
  mt 20
  h 45
  border-top: $border
  border-bottom: $border
  bg #fff
  padding 0 15px
  fs 16
  display flex
  align-items center
  justify-content space-between
  &::after {
    content: ''
    w 9
    h 16
    bgimg url(../../../../assets/images/arrow2.png) contain
  }
}

.protocol {
  color #00a6e2
  //margin 10px 15px 0
}

.next {
  margin 40px 15px
  h 42
  display: flex;
  button {
    flex 1
    fs 18
    color #fff
    border 0
    bg $main
    border-radius 5px
    transition all .3s
    &:disabled {
      bg lighten($main, 15%)
      color rgba(255,255,255,.5)
    }
  }
}

.discountBar {
  bg #fcfcfc
  pl 15 
  pr 15
  mt 20
}

.discountBarTouch {
  h 44
  display flex
  align-items center
}

.discountBarName {
  flex 1
  fs 16
  color #888
}
.primeTxt {
  color #666
  font-size 12px
  text-align center
  margin-top 6px
}